{% comment %}
Group awards by year for better organization
{% endcomment %}
{% assign awards_by_year = data[1] | group_by: 'date' | sort: 'name' | reverse %}

<div class="card-text font-weight-light">
  {% for year_group in awards_by_year %}
    <div class="year-group mb-4">
      <h5 class="year-header font-weight-bold mb-3" style="color: var(--global-theme-color); border-bottom: 2px solid var(--global-theme-color); padding-bottom: 5px;">
        {{ year_group.name }}
      </h5>
      <ul class="list-group list-group-flush">
        {% for content in year_group.items %}
          <li class="list-group-item border-0 px-0">
            <div class="row">
              <div class="col-12">
                <h6 class="title font-weight-bold mb-1">
                  {% if content.url %}
                    <a href="{{ content.url }}">{{ content.title }}</a>
                  {% else %}
                    {{ content.title }}
                  {% endif %}
                </h6>
                {% if content.awarder %}
                  <h6 class="mb-1" style="font-size: 0.95rem">{{ content.awarder }}</h6>
                {% endif %}
                {% if content.summary %}
                  <h6 class="mb-1" style="font-size: 0.95rem; font-style: italic">{{ content.summary }}</h6>
                {% endif %}
              </div>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  {% endfor %}
</div>
